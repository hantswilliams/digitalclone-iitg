# Flask Environment Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://clone_user:clone_pass@localhost:5432/cloneapp

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# MinIO/S3 Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_NAME=voice-clone-assets

# Redis/Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI Service API Keys
ZYPHRA_API_KEY=your-zyphra-api-key
ZYPHRA_API_URL=http://api.zyphra.com/v1
HF_API_TOKEN=your-huggingface-token-for-indextts
INDEXTTS_SPACE_NAME=hants/IndexTTS
OLLAMA_API_URL=http://localhost:11434

# GPU/Processing Configuration
GPU_WORKERS=1
MAX_CONCURRENT_JOBS=3

# Logging
LOG_LEVEL=INFO

# Development server
PORT=5000
