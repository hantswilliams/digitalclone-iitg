# Flask Application Settings
FLASK_ENV=production  # Options: development, testing, production
SECRET_KEY=your_secret_key_here

# Database Settings
DATABASE_URL=postgresql://postgres:postgres@db:5432/digitalclone

# Redis and Celery
REDIS_URL=redis://redis:6379/0

# S3 Storage
S3_BUCKET_NAME=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1

# OAuth Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_REDIRECT_URI=http://localhost:5000/auth/callback

# External API Keys
PLAYHT_API_KEY=your-playht-api-key
PLAYHT_USER_ID=your-playht-user-id

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Docker PostgreSQL
POSTGRES_PASSWORD=postgres

# File Storage
UPLOAD_FOLDER=/app/app/static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
