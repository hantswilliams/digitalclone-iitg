# Development Environment Settings Example
# Copy this file to .env.dev and edit as needed

# Flask Settings
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_SECRET_KEY=dev_secret_key_change_in_production
FLASK_PORT=5002

# Database Settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/digitalclone

# Redis Settings (for Celery)
REDIS_URL=redis://localhost:6380/0
CELERY_BROKER_URL=redis://localhost:6380/0
CELERY_RESULT_BACKEND=redis://localhost:6380/0

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB max upload

# Add your API keys and credentials below
# AWS_ACCESS_KEY_ID=your_aws_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# S3_BUCKET_NAME=your_bucket_name
# PLAYHT_USERID=your_playht_user_id
# PLAYHT_SECRET=your_playht_secret
# HUGGING_FACE_API_KEY=your_hugging_face_key
# GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
# GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret
