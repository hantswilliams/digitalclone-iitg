# Deployment Environment Variables - Example File
# Copy this to .env.deploy and edit as needed

# AWS Elastic Beanstalk Configuration
AWS_EB_APP_NAME=digitalclone-iitg
AWS_EB_ENV_NAME=digitalclone-production
AWS_REGION=us-east-1
AWS_INSTANCE_TYPE=t3.medium

# Google Cloud Run Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_SERVICE_NAME=digitalclone-iitg
GCP_MEMORY=2Gi
GCP_CPU=1
GCP_SECRET_NAME=digitalclone-env
# Optional: Base64-encoded service account key JSON for CI/CD
GCP_SERVICE_ACCOUNT_KEY=

# Heroku Configuration
HEROKU_APP_NAME=digitalclone-iitg
HEROKU_ADD_DATABASE=true

# DigitalOcean Configuration
DO_APP_NAME=digitalclone-iitg
DO_REGION=nyc
DO_PLAN=basic-xxs
DO_BRANCH=main
DO_REPO=username/repo-name
